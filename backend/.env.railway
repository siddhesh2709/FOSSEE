# Railway Deployment Environment Variables

# Required for Production
SECRET_KEY=django-insecure-CHANGE-THIS-TO-RANDOM-SECRET-KEY-IN-RAILWAY
DEBUG=False
ALLOWED_HOSTS=.railway.app,.vercel.app,localhost

# CORS Configuration (Update with your Vercel URL after frontend deployment)
CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3000
CSRF_TRUSTED_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Database (Railway will provide this automatically if you add PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Optional
DJANGO_SETTINGS_MODULE=equipment_visualizer.settings
PORT=8000
